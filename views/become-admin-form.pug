extends layout

block content
    if user.member
        form(method="POST" action="")
            div.form-group
                label(for='adminCode') Become Admin:
            div.form-group
                input#adminCode.form-control(type='text' placeholder="Enter Admin Code" name='adminCode' value='' class="formInput")
            div(class="buttonDiv")
                button(type="submit") Submit
        if errors 
            ul 
                for error in errors
                    li!= error.msg
    else 
        p Not a member 