extends layout

block content
    p(class="messageFormHeader") New Message 

    if user
        form(method="POST" action="")    
            div.form-group
                label(for="title") Title:
            div.form-group 
                input#title.form-control(type="text", placeholder="Title" name="title" value="" class="formInput")
            div.form-group
                label(for="message") Message:
            div.form-group  
                textarea#message.form-control(type="text", placeholder="Message" name="message" value="" class="formInput")
            div(class="submitButtonDiv")
                button(type="submit" class="submitButton") Submit
        
    else 
        p Please log in to write a message
    