extends layout

block content
    if user
        form(method="POST" action="")
            div.form-group
                label(for='membershipCode') Become a Member:
            div.form-group
                input#membershipCode.form-control(type='text' placeholder="Enter Membership Code" name='membershipCode' value='' class="formInput")
            div(class="buttonDiv")
                button(type="submit") Submit
        if errors 
            ul 
                for error in errors
                    li!= error.msg
    else 
        p Not logged in