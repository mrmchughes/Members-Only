doctype html
html
  head
    link(rel='stylesheet', href='/styles/style.css')
  body
    if user 
      div(class="overflow-hidden mb-6 p-6 bg-zinc-800 text-white text-center")
        div(class='float-left ml-3.5')       
          a(href="/") Members Only 

        div(class='float-right mr-3.5')          
          a(href="/message") Create Message       
          a(href="/become-member") Become Member         
          a(href="/become-admin") Become Admin  
          a(href="/log-out") Log Out
    else 
      div(class="overflow-hidden mb-6 p-6 bg-zinc-800 text-white text-center")
        div(class='float-left my-5 ml-3.5')
          a(href="/") Members Only 

        div(class='float-right my-5 mr-3.5')
          a(href="/log-in") Log In       
          a(href="/sign-up") Sign Up

    block content
